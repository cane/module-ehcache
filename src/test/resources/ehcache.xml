<ehcache:config
		xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
		xmlns:ehcache='http://www.ehcache.org/v3'
		xmlns:terracotta='http://www.ehcache.org/v3/clustered'
		xsi:schemaLocation="http://www.ehcache.org/v3 ./ehcache-core.xsd http://www.ehcache.org/v3/clustered ./ehcache-clustered-ext-3.1.xsd">
	<ehcache:service>
		<terracotta:cluster>
			<terracotta:connection url="terracotta://localhost:9410/default-server"/>
			<terracotta:server-side-config auto-create="true">
				<terracotta:default-resource from="main"/>
			</terracotta:server-side-config>
		</terracotta:cluster>
	</ehcache:service>

	<ehcache:cache-template name="example">
		<ehcache:key-type>java.lang.String</ehcache:key-type>
		<ehcache:value-type>org.canedata.cache.Cacheable</ehcache:value-type>
		<ehcache:expiry>
			<ehcache:tti unit="minutes">30</ehcache:tti>
		</ehcache:expiry>
		<ehcache:resources>
			<ehcache:heap unit="MB">100</ehcache:heap>
			<!--
			<ehcache:offheap unit="MB">200</ehcache:offheap>
			-->
		</ehcache:resources>
	</ehcache:cache-template>

	<ehcache:cache alias="default" uses-template="example">
		<ehcache:key-type>java.lang.String</ehcache:key-type>
		<ehcache:resources>
			<ehcache:heap unit="MB">100</ehcache:heap>
			<ehcache:offheap unit="MB">300</ehcache:offheap>
		</ehcache:resources>
	</ehcache:cache>

	<ehcache:cache alias="sample" uses-template="example">
		<ehcache:key-type>java.lang.String</ehcache:key-type>
		<ehcache:expiry>
			<ehcache:ttl unit="millis">1000</ehcache:ttl>
		</ehcache:expiry>
		<ehcache:resources>
			<ehcache:heap unit="MB">10</ehcache:heap>
			<ehcache:offheap unit="MB">100</ehcache:offheap>
			<terracotta:clustered-dedicated unit="MB">110</terracotta:clustered-dedicated>
		</ehcache:resources>
	</ehcache:cache>

</ehcache:config>
